-- 更新処理
RunService.Heartbeat:Connect(function()
    -- プレイヤー人数
    ServerInfoLabels.Players:Set("Players: " .. tostring(#Players:GetPlayers()))
    
    -- レイテンシ (Ping)
    local stats = LocalPlayer:FindFirstChild("NetworkStats")
    if stats then
        local ping = stats:FindFirstChild("Data Ping")
        if ping then
            ServerInfoLabels.Latency:Set("Latency: " .. math.floor(ping:GetValue()) .. "ms")
        end
    end

    -- 滞在時間
    local elapsed = math.floor(tick() - startTime)
    local minutes = math.floor(elapsed / 60)
    local seconds = elapsed % 60
    ServerInfoLabels.InServerFor:Set(string.format("In server for: %02d:%02d", minutes, seconds))
end)

